<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:paddingTop="20dp"
    tools:context="com.simplexo.alaamchannel.ConnectActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView3"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="42dp"
        android:text="للتواصل مع القائمين علي التطبيق :"
        android:textColor="#0f75dc" />

    <TextView
        android:id="@+id/connectToProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="28dp"
        android:text="احمد نصحي :رقم الهاتف" />

    <TextView
        android:id="@+id/connectToProvider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/connectToProvider"
        android:layout_below="@+id/connectToProvider"
        android:layout_marginTop="29dp"
        android:text="احمد نصحي : فيس بوك" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/connectToProvider2"
        android:layout_below="@+id/connectToProvider2"
        android:layout_marginTop="44dp"
        android:text="للتواصل مع المطور "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_connectTodevelop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="36dp"
        android:text="mospro20@gmail.com"

        android:textColor="#144e94" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/connectToProvider2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/edittext_background"
        android:paddingTop="15dp"
        android:textColor="#071286"
        android:text="هذا التطبيق قائما علي خدماتكم . لذا اذ كنت تملك تعليقا او استفسار لا تكن خجلا من التواصل معنا" />

</RelativeLayout>
